<h1>New game</h1>
<ul class="list-inline text-center">
  <% @letters.each do |letter| %>
  <li class="list-inline-item blue"><%= letter %></li>
  <% end %>
</ul>

<div class="form-group text-center">
  <p>What is the longest word you can find ?</p>
  <form class="form" action="/score" method="get">
  <input type="text" class="form-control" id="input" name="answer">
<!--   <input id="tags_list" name="tags_list" value="toto" type="hidden" /> -->
  <%= hidden_field_tag 'cacher', @letters %>
  <%# raise %>
  <input class="btn btn-primary" type="submit">
</form>
</div>

